<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Information"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/background_gradient"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginBottom="0dp">


        <LinearLayout
            android:layout_marginTop="740dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:background="@drawable/background_gradient"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="0dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="316dp"

                android:background="@drawable/transparent_black"
                android:scaleType="centerCrop"
                android:src="@drawable/privateroom"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#0493ea"
                android:fontFamily="@font/confortaa"
                android:padding="10dp"
                android:text="Your Own Private Room"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ViewFlipper
                android:id="@+id/flip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:fontFamily="@font/confortaa"
                    android:padding="10dp"
                    android:text="Full featured Room with ac and have eveything which is required by individual. Internationally it has more than 5 lakh hotels associated with it, covering popular destinations across the world."
                    android:textAlignment="center"
                    android:textColor="#fff"
                    app:fontFamily="@font/confortaa" />
            </ViewFlipper>

            //image then para

            <Button
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="#fff" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/decoration" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/confortaa"
                        android:gravity="end"
                        android:paddingLeft="10dp"

                        android:text="|| decoration ||"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ViewFlipper
                        android:id="@+id/flip4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/confortaa"
                            android:gravity="end"
                            android:paddingLeft="10dp"
                            android:text="The company provides information, pricing, availability, and booking facility for domestic and international air travel, domestic and international hotel bookings, holiday packages, buses, trains, in city activities, inter-city and point-to-point cabs, homestays and cruises."

                            android:textAlignment="viewEnd"
                            android:textAllCaps="true"

                            android:textColor="#fff"
                            android:textSize="14dp" />
                    </ViewFlipper>


                </LinearLayout>

            </LinearLayout>


            <Button
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="#fff" />


            //para fir image


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/confortaa"
                        android:gravity="start"
                        android:paddingRight="10dp"

                        android:text="|| OPen Room ||"
                        android:textAlignment="viewStart"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ViewFlipper
                        android:id="@+id/flip2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/confortaa"
                            android:gravity="start"
                            android:paddingRight="10dp"
                            android:text="The company provides information, pricing, availability, and booking facility for domestic and international air travel, domestic and international hotel bookings, holiday packages, buses, trains, in city activities, inter-city and point-to-point cabs, homestays and cruises."

                            android:textAlignment="viewStart"
                            android:textAllCaps="true"

                            android:textColor="#fff"
                            android:textSize="14dp" />
                    </ViewFlipper>


                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/openwindow" />

            </LinearLayout>

            <Button
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="#fff" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="316dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/transparent_black"
                android:scaleType="centerCrop"
                android:src="@drawable/eatingroom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#0493ea"
                android:fontFamily="@font/confortaa"
                android:padding="10dp"
                android:text="Your Own Private Room"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="105dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_black"
                    android:scaleType="centerCrop"

                    android:src="@drawable/toilet" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_marginTop="10dp"

                    android:layout_weight="1"
                    android:background="@drawable/transparent_black"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kitchen" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_black"
                    android:scaleType="centerCrop"
                    android:src="@drawable/readbook" />

            </LinearLayout>

            <Button
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="#fff" />



            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="#0493ea"
                android:fontFamily="@font/confortaa"
                android:padding="5dp"
                android:text="Toilet"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="#0493ea"
                android:fontFamily="@font/confortaa"
                android:padding="5dp"
                android:text="Kitchen"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#0493ea"
                android:fontFamily="@font/confortaa"
                android:padding="10dp"
                android:text="Study Table"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/tv"
                android:gravity="center"
                android:scaleType="centerCrop">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/transparent_blue">

                <Button
                    android:id="@+id/book3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#0493ea"
                    android:fontFamily="@font/confortaa"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="book"
                    android:text="Book Now"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14dp" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="#fff" />


        </LinearLayout>
    </ScrollView>





</android.support.constraint.ConstraintLayout>