<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRoom"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center"
    android:gravity="center">


        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/hot"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/confortaa"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"
            android:drawableLeft="@drawable/user"

            android:id="@+id/housename"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:textColorHint="#fff"

            android:hint="Enter House Name"/>


        <EditText
            android:drawableLeft="@drawable/email"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/confortaa"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"

            android:id="@+id/price"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:textColorHint="#fff"

            android:hint="Enter Price"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/confortaa"
            android:textColor="#fff"
            android:textSize="14sp"
            android:drawableLeft="@drawable/password"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:textColorHint="#fff"

            android:hint="email"/>

        <EditText
            android:id="@+id/phoneno"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/confortaa"
            android:textColor="#fff"
            android:textSize="14sp"
            android:drawableLeft="@drawable/password"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="10dp"
            android:inputType="number"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:textColorHint="#fff"

            android:hint="Contact no"/>
        <EditText
            android:id="@+id/room_available"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/confortaa"
            android:textColor="#fff"
            android:textSize="14sp"
            android:drawableLeft="@drawable/password"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="10dp"
            android:inputType="number"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:textColorHint="#fff"

            android:hint="Room Available"/>
        <EditText
            android:id="@+id/size"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/confortaa"
            android:textColor="#fff"
            android:textSize="14sp"
            android:drawableLeft="@drawable/password"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:textColorHint="#fff"

            android:hint="size(sq feet)"/>
        <EditText
            android:id="@+id/description"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/confortaa"
            android:textColor="#fff"
            android:textSize="14sp"
            android:drawableLeft="@drawable/password"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:textColorHint="#fff"

            android:hint="Description"/>



        <Button
            android:id="@+id/addRoom"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:background="#e61b37"
            android:fontFamily="@font/confortaa"
            android:layout_gravity="center"
            android:gravity="center"


            android:text="ADD ROOM"
            android:onClick="Add_Room"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="14dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/background_gradient"
            android:fontFamily="@font/confortaa"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="Cancel1"
            android:text="CANCEL"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="14dp" />





</LinearLayout>