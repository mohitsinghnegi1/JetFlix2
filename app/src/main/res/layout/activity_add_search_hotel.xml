<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSearchHotel"
    android:orientation="vertical"
    android:background="@drawable/hot1"
    android:layout_gravity="center"
    android:gravity="center"
    >



    <Button
        android:id="@+id/search_room"
        android:background="#fff"
        android:layout_gravity="center"
        android:text="SEARCH ROOM"
        android:padding="10dp"
        android:onClick="searchData"
        android:letterSpacing="0.1"
        android:textColor="#df1f3c"
        android:textAllCaps="true"
        android:layout_margin="20dp"

        android:layout_width="200dp"
        android:drawableLeft="@drawable/ic_location_searching_black_24dp"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="addRoom"
        android:background="#fff"
        android:id="@+id/book_room"
        android:letterSpacing="0.1"
        android:textAllCaps="true"
        android:textColor="#df1f3c"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:text="ADD ROOM "
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="ourService"
        android:background="#fff"
        android:id="@+id/services"
        android:letterSpacing="0.1"
        android:textAllCaps="true"
        android:textColor="#df1f3c"
       android:drawableLeft="@drawable/ic_verified_user_black_24dp"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:text="OUR SERVICES"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>